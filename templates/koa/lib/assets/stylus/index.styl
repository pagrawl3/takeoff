global-reset()

html
	h1, h2, h3, h4, h5, h6, span, li
		opacity 0
		transition opacity 0.8s ease-out-cubic
	

.wf-loading
	h1, h2, h3, h4, h5, h6, span, li
		opacity 0
		
.wf-active
	h1, h2, h3, h4, h5, h6, span, li
		opacity 1

	
body
	background-color #ecf0f1;
	font-family "museo-slab", serif
	font-weight 300	
	color #333

h1
	display block
	text-align center
	margin 0 auto
	margin-top 20%
	font-size 70px
	font-weight 300

hr
	width 50%
	opacity 0.5
